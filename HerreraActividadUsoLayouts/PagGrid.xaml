<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HerreraActividadUsoLayouts.PagGrid"
             Title="Pagina Grid">
    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <BoxView Grid.Row="0" Grid.Column="0" Color="DarkBlue" />
        <BoxView Grid.Row="0" Grid.Column="1" Color="Goldenrod" />
        <BoxView Grid.Row="1" Grid.Column="0" Color="Teal" />

        <Button 
            Grid.Row="1" 
            Grid.Column="1"
            Text="Ir A La Pagina Stack"
            Clicked="VolverPaginaPri_Clicked"
            BackgroundColor="Purple"
            TextColor="White"/>
    </Grid>
</ContentPage>